{% extends 'base.html.twig' %}

{% block body %}
    <div id="fh5co-main">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<h2><i class="icon-user"></i> Profile</h2>
					<div class="fh5co-spacer fh5co-spacer-sm"></div>
					<div class="row">
						<div class="col-md-12">
							<div class="fh5co-pricing-table">
								<ul class="fh5co-list-check">
									<li class="fh5co-include">
										<h3>Fullname</h3>
										<p>{{ app.user.fullname }}</p>
									</li>
									<li class="fh5co-include">
										<h3>Username</h3>
										<p>{{ app.user.username }}</p>
									</li>
									<li class="fh5co-include">
										<h3>Email</h3>
										<p>{{ app.user.email }}</p>
									</li>
								</ul>
								<a href="{{ path('update_profile') }}" class="btn btn-block btn-sm btn-outline">Update profile</a>
								<a href="{{ path('update_password') }}" class="btn btn-block btn-sm btn-outline">Update password</a>
							</div>
						</div>
					</div>
				</div>
        	</div>
       </div>
	</div>
{% endblock %}

<div id="fh5co-main">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2>Login</h2>
                <div class="fh5co-spacer fh5co-spacer-sm"></div>
                <form action="{{ path('login') }}" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Username" id="username" name="_username" value="{{ last_username|default() }}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" type="password" placeholder="Password" id="password" name="_password" >
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <button class="btn-primary btn" type="submit">Login</button>
                                <a href="{{ path('register') }}">Register</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
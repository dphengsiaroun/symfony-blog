{% extends 'base.html.twig' %}

{% block header %}<h1>Users</h1>{% endblock %}

{% block body %}
<div id="fh5co-main">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<h2><i class="icon-users"></i> Show user</h2>
					<div class="fh5co-spacer fh5co-spacer-sm"></div>
					<div class="row">
						<div class="col-md-12">
                            <div class="fh5co-pricing-table">
								<ul class="fh5co-list-check">
									<li class="fh5co-include">
                                        <h3>Fullname</h3>
                                        <p>{{ user.fullname }}</p>
                                    </li>
									<li class="fh5co-include">
                                        <h3>Username</h3>
                                        <p>{{ user.username }}</p>
                                    </li>
									<li class="fh5co-include">
                                        <h3>Email</h3>
                                        <p>{{ user.email }}</p>
                                    </li>
								</ul>
							</div>
                            <a href="{{ path('admin_user_list') }}" class="btn btn-primary"><i class="icon-arrow-left2"></i> Back</a>        							
						</div>
					</div>
				</div>
        	</div>
       </div>
	</div>
{% endblock %}
